{
  "name": "virtual-table-multizone",
  "version": "1.0.0",
  "private": true,
  "description": "Next.js Multi-Zone Architecture - Patient Virtual Table & Forms",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter shell dev\" \"pnpm --filter forms dev\"",
    "dev:shell": "pnpm --filter shell dev",
    "dev:forms": "pnpm --filter forms dev",
    "build": "pnpm --filter shell build && pnpm --filter forms build",
    "build:shell": "pnpm --filter shell build",
    "build:forms": "pnpm --filter forms build",
    "start": "concurrently \"pnpm --filter shell start\" \"pnpm --filter forms start\"",
    "start:shell": "pnpm --filter shell start",
    "start:forms": "pnpm --filter forms start",
    "lint": "pnpm --recursive lint",
    "test": "pnpm --recursive test",
    "test:coverage": "pnpm --recursive test:coverage",
    "test:e2e": "pnpm --filter shell test:e2e",
    "clean": "pnpm --recursive clean && rm -rf node_modules",
    "data:generate": "pnpm --filter @virtual-table/database data:generate",
    "data:import": "pnpm --filter @virtual-table/database data:import",
    "data:reset": "pnpm --filter @virtual-table/database data:reset"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "turbo": "^2.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}

